{
  "compilerOptions": {
    //"target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "i18n/index.ts",
    "src/tests/components/ContactForm.t.tsx",
    "src/tests/components/Modal.test.tsx",
    "src/tests/components/Navbar.test.tsx",
    "src/tests/components/SkillCard.test.tsx",
    "src/tests/locale/Home.test.tsx1",
  ],
  "exclude": [
    "node_modules",
    "next.config.js",
    "v2",
    "**/*.mjs"
  ]
}
